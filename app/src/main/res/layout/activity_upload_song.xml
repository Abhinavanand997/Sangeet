<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/black">

    <EditText
        android:id="@+id/title_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Song Title"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="text"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/artist_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Artist Name"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="text"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/select_audio_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Audio File"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/select_cover_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Cover Image (Optional)"
        android:layout_marginBottom="16dp" />

    <!-- ðŸ”¹ Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:progress="0"
        android:max="100"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/progress_bar_drawable" />

    <!-- ðŸ”¹ Upload Status Text -->
    <TextView
        android:id="@+id/upload_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:visibility="gone"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/upload_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Song"
        android:backgroundTint="#00897B"
        android:textColor="@color/white"
        android:layout_marginTop="16dp" />
</LinearLayout>
